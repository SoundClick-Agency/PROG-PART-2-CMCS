@model ClaimListResultModel

@{
    ViewBag.Title = "Track Claims";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-gradient font-weight-bold">Track Submitted Claims</h2>

    <div class="table-responsive shadow-lg rounded-lg bg-white">
        <table class="table table-striped table-hover">
            <thead class="thead-gradient text-white">
                <tr>
                    <th class="text-center">Hours Worked</th>
                    <th class="text-center">Hourly Rate</th>
                    <th class="text-center">Payout Requested</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.LecturerClaims)
                {
                    <tr>
                        <td class="text-center">@claim.HoursWorked</td>
                        <td class="text-center">R @claim.HourlyRate</td>
                        <td class="text-center">R @claim.ExpectedPayout</td>
                        <td class="text-center">
                            @if (claim.Status == "Approved")
                            {
                                <span class="badge badge-success"><i class="fas fa-check-circle mr-1"></i>Approved</span>
                            }
                            else if (claim.Status == "Pending")
                            {
                                <span class="badge badge-warning"><i class="fas fa-clock mr-1"></i>Pending</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="badge badge-danger"><i class="fas fa-times-circle mr-1"></i>Rejected</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">@claim.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

